<MyFloat>:

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'

        Image:
            source:"image/EdgarNoob.png"
            size_hint: .5,.5
            allow_strech: True
            keep_ratio: False
            canvas.before:
                PushMatrix
                Rotate:
                    angle: 180
                    origin: self.center
            canvas.after:
                PopMatrix
        Label:
            id:1
            text: root.my_text1
            font_size: "80dp"
            size_hint: .5,.5
            canvas.before:
                PushMatrix
                Rotate:
                    angle: 180
                    origin: self.center
            canvas.after:
                PopMatrix
         

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        Image:
            source:"image/Anirob.png"
            size_hint: .5,.5
            allow_strech: True
            keep_ratio: False
            canvas.before:
                PushMatrix
                Rotate:
                    angle: 180
                    origin: self.center
            canvas.after:
                PopMatrix
        Label:
            text: root.my_text2
            font_size: "80dp"
            size_hint: .5,.5
            canvas.before:
                PushMatrix
                Rotate:
                    angle: 180
                    origin: self.center
            canvas.after:
                PopMatrix
           
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        Image:
            source:"image/Osgir.png"
            size_hint: .5,.5
            allow_strech: True
            keep_ratio: False
        Label:
            text: root.my_text3
            font_size: "80dp"
            size_hint: .5,.5

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        Image:
            source:"image/tout.png"
            size_hint: .5,.5
            
        Label:
            text: root.my_text4
            font_size: "80dp"
            size_hint: .5,.5

    GridLayout:
        cols:2
        
        BoxLayout:
            id: p1
            orientation: "vertical"
            Button:
                on_press: root.on_button_click2()
                background_color: 1,1,1,.1
            Button:
                on_press: root.on_button_click1()
                background_color: 1,1,1,.1

        BoxLayout:
            id: p2
            orientation: "vertical"
            Button: 
                on_press: root.on_button_click4()
                background_color: 1,1,1,.1
            Button :
                on_press: root.on_button_click3()
                background_color: 1,1,1,.1
            
        BoxLayout:
            id: p3
            orientation: "vertical"
            Button: 
                on_press: root.on_button_click5()
                background_color: 1,1,1,.1
            Button :
                on_press: root.on_button_click6()
                background_color: 1,1,1,.1
            
        BoxLayout:
            id: p4
            orientation: "vertical"
            Button: 
                on_press: root.on_button_click7()
                background_color: 1,1,1,.1
            Button :
                on_press: root.on_button_click8()
                background_color: 1,1,1,.1
    
    Button:
        on_press: root.reset()
        size_hint: 0.1,0.1
        pos_hint: {"center_x":0.5 , "center_y":0.5}
        text: "Jean Reset"
        
        
            
            